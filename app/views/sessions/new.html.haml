%h1 Login

= form_tag 	login_create_path do

  = label :user, :user_id, 'User-ID'
  = text_field :user, 'user_id', :id => 'login_id'
  
  = label :user, :email, 'E-mail'
  = text_field :user, 'email', :id => 'login_email'


  = submit_tag 'Login to my Account', :id => 'login_submit'
  <br/>
  
  = link_to 'Create an Account', new_user_path, :id => 'signup'
  <br/>
  
  = link_to 'Back', movies_path
